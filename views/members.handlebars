<div class="container">

  <div class="row">
    <div class="header">
      <h1>Welcome<span class="member-name"></span></h1>
    </div>

  </div>

  <div class="container">
    <figure class="figure">
      <img src="https://miro.medium.com/max/950/1*_JR5_qc4efQmjPuSJ4fRBA.png" class="figure-img" alt="main image">
    </figure>

    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h3>Chat</h3>

          {{!-- socket.io message container --}}
          <div id="message-container"></div>
          <form id="send-container">
            <input type="text" id="message-input">
            <button type="submit" id="send-button">Send</button>
          </form>

        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h3>Add a new article</h3>
          <form id="cms">
            <div class="form-group">
              <label for="title">Title:</label>
              <input type="text" class="form-control" id="title">
              <br />
              <label for="body">Body:</label>
              <textarea class="form-control" rows="10" id="body"></textarea>
              <div class="form-group">
                <br>
                <label for="category">Select Category:</label>
                <select class="custom-select" id="list-category">
                  <option value="Health">Health</option>
                  <option value="Movies">Movies</option>
                  <option value="Music">Music</option>
                  <option value="Tech">Tech</option>
                </select>
              </div>
              <br />
              <button type="submit" class="btn btn-success submit btn-lg">Submit</button>
            </div>
          </form>
        </div>

      </div>
    </div>

    <div  class="container">
      <div class="row">
        <div class="header">
          <h2 class="health">HEALTH</h2>
        </div>
        <div class="article col-md-12">
          <span id="health-container"></span>

        </div>
      </div>

      <div class="row">
        <div class="header">
          <h2 class="movies">MOVIES</h2>
        </div>
        <div class="article col-md-12">
          <span id="movie-container"></span>
        </div>
      </div>

      <div class="row">
        <div class="header">
          <h2 class="music">MUSIC</h2>
        </div>
        <div class="article col-md-12">
          <span id="music-container"></span>
        </div>
      </div>

      <div class="row">
        <div class="header">
          <h2 class="tech">TECH</h2>
        </div>
        <div class="article col-md-12">
          <span id="tech-container"></span>
        </div>
      </div>
    </div>


